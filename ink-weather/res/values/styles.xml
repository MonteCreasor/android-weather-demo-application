<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Dialog" parent="AppTheme">
	    <item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@color/transparent</item>
		<item name="android:windowIsFloating">true</item>
	</style>
    
    <style name="Button">
		<item name="android:background">@drawable/background_button</item>
	    <item name="android:textColor">@color/button_foreground</item>
	    <item name="android:textSize">@dimen/activity_textSize</item>
	    <item name="android:padding">@dimen/button_padding</item>
    </style>
    
    <style name="FragmentDrawerLayout">
	    <item name="android:layout_width">250dp</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:choiceMode">singleChoice</item>
	    <item name="android:divider">@android:color/transparent</item>
	    <item name="android:dividerHeight">0dp</item>
	</style>
	
    <style name="SelectCountryHeader">
		<item name="android:padding">@dimen/activity_default_padding</item>
		<item name="android:background">@color/fragment_select_country_heading_background</item>
		<item name="android:textColor">@color/fragment_select_country_heading_foreground</item>
		<item name="android:textStyle">bold</item>
    </style>

</resources>
