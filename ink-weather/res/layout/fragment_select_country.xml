<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_navigationdrawer"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for cities"
        style="@style/DrawerLayoutHeader"/>
    
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
	
	    <EditText 
	        android:id="@+id/fragment_select_city_search_edittext"
			android:layout_width="0dp"
			android:layout_weight=".7"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:background="@null"
			android:textColor="#333333"
			android:textColorHint="#555555"
			android:textSize="16sp"
			android:padding="@dimen/activity_default_padding"
			android:imeOptions="actionDone"
			android:hint="@string/fragment_select_country_search"/>
	    
	    <Button
	        android:id="@+id/fragment_select_city_search_button"
			android:layout_width="0dp"
			android:layout_weight=".3"
			android:layout_height="wrap_content"
			android:text="Search"
			style="@style/Button"
			android:layout_marginRight="@dimen/activity_default_padding_minor"/>
	        
    </LinearLayout>
    
</LinearLayout>