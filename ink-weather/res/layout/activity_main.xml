<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity_navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout
	    android:id="@+id/main_activity_content_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/activity_main_background">
	 
		<com.ink.weather.view.WeatherDataView
		    android:id="@+id/activity_main_weather_data_view"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"/>
		
		<TextView
			android:id="@+id/activity_main_select_new_city"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/activity_main_select_new_city_text"
			android:textStyle="bold"
			android:textColor="@color/activity_main_select_new_city_foreground"
			android:layout_marginBottom="@dimen/activity_main_select_new_city_margin"
			android:text="@string/activity_main_select_new_city"
			android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"/>
	
	</RelativeLayout>
	
	<fragment
	    android:name="com.ink.weather.fragment.SelectCountryFragment"
	    android:id="@+id/activity_main_navigation_fragment"
	    android:layout_gravity="start"
		style="@style/FragmentDrawerLayout"/>

</android.support.v4.widget.DrawerLayout>
