<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
   <LinearLayout
        android:layout_width="@dimen/fragment_modal_dialog_width"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dialog"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_default_padding"
        android:paddingBottom="@dimen/activity_default_padding_minor"
        android:paddingRight="@dimen/activity_default_padding"
        android:paddingLeft="@dimen/activity_default_padding">
        
		<TextView
		    android:id="@+id/activity_dialog_textview"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		   	android:textColor="@color/fragment_dialog_text_foreground"
		   	android:textStyle="bold"
		   	android:gravity="center_horizontal"
		   	android:lineSpacingExtra="@dimen/activity_default_padding_minor"/>
		
        <Button 
            android:id="@+id/fragment_dialog_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_dialog_ok"
            android:visibility="gone"
            style="@style/Button"
            android:layout_marginBottom="@dimen/activity_default_padding_minor"/>
        
    </LinearLayout>
    
</RelativeLayout>